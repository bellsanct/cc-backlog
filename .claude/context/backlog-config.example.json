{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "spaceKey": "my-space",
  "apiEndpoint": "https://my-space.backlog.com/api/v2",
  "apiKeyEnvVar": "BACKLOG_API_KEY",
  "defaultProject": null,
  "preferences": {
    "defaultIssueType": "Task",
    "defaultPriority": "Normal",
    "autoAssignSelf": true,
    "notifyOnCreate": true,
    "cacheTimeout": 300,
    "batchSize": 10
  },
  "mcpServer": {
    "enabled": true,
    "toolPrefix": "",
    "maxTokens": 50000
  }
}
